    android:layout_height="match_parent"
    tools:context="kr.co.kspay.m.kspaymobile.YunaSeaActivity">

    <WebView
        android:id="@+id/wv_yunasea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
